= form_for blog do |f|
  - if blog.errors.any?
    - blog.errors.full_messages.each do |message|
      = js add_gritter(message)
  .form-group
    = f.label :title
    %br/
    = f.text_field :title, class: 'form-control'
  .form-group
    = f.label :body
    %br/
    = f.text_area :body, class: 'form-control', rows: '15'
  .actions
    = f.submit "Submit", class: 'btn btn-primary'
    
    